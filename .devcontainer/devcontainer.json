{
  "name": "Website Dev",
  "appPort": ["3000:3000"],
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "postCreateCommand": "npm install",
  "remoteUser": "node",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/git:1.3.4": { "version": "2.47.1" },
    "ghcr.io/devcontainers/features/node:1.6.3": { "version": "22.14.0" },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1.6.3": {},
    "ghcr.io/schlich/devcontainer-features/playwright:0.1.1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers-extra/features/act:1.0.15": {
      "version": "0.2.80"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "hashicorp.terraform",
        "mikestead.dotenv",
        "ms-playwright.playwright",
        "waderyan.gitblame"
      ]
    }
  }
}
